# MongoDB connection string (without database name - syncer uses qrldata-z)
MONGOURI=mongodb://localhost:27017

# Zond RPC endpoint for block synchronization
NODE_URL=http://localhost:8545

# Optional: Separate RPC endpoint for mempool/pending transaction detection
# Useful when using a public RPC for blocks but local node for mempool access
# Falls back to NODE_URL if not set
MEMPOOL_NODE_URL=http://localhost:8545

# Beacon chain HTTP API endpoint for validator data
BEACONCHAIN_API=http://localhost:3500

# Optional: RPC delay configuration (milliseconds)
# RPC_DELAY_MS=50
# RPC_DELAY_JITTER_MS=26
